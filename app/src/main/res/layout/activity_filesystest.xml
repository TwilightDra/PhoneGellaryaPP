<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.td.phonegellary.filesystest">

    <Button
        android:id="@+id/btn_TakePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:layout_marginLeft="136dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="99dp"
        />

    <ImageView
        android:id="@+id/imageViewTest"
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="108dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_TakePic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/btnC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="129dp"
        android:text="Clean"
        app:layout_constraintLeft_toRightOf="@+id/btn_TakePic"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="dbclean"/>
</android.support.constraint.ConstraintLayout>
